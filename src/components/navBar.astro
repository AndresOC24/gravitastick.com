let isMenuOpen = false;

function toggleMenu() {
  const menu = document.querySelector("#mobile-menu");
  isMenuOpen = !isMenuOpen;
  if (menu) {
    menu.classList.toggle("hidden");
  }
}
---
    <!-- Colocamos el script al final del body para asegurarnos que el DOM esté cargado -->
    <script>
        // Hacemos que toggleMenu sea accesible globalmente
        (window as any).toggleMenu = function() {
          const menu = document.querySelector("#mobile-menu");
          if (menu) {
            menu.classList.toggle("hidden");
          }
        };
  
        // Ejemplo del script para el navbar (mantenerlo o ajustarlo según necesites)
        document.addEventListener("DOMContentLoaded", function () {
          const navbar = document.querySelector("#navbar");
  
          if (navbar) {
            window.addEventListener("scroll", function () {
              if (window.scrollY > 50) {
                navbar.setAttribute("style", "background-color: var(--color-secondary-blue-dark) !important");
                navbar.classList.add("shadow-lg");
              } else {
                navbar.setAttribute("style", "background-color: transparent !important");
                navbar.classList.remove("shadow-lg");
              }
            });
          }
        });
      </script>


<nav id="navbar" class="fixed w-full top-0 left-0 z-50 transition-all duration-300 bg-transparent">
